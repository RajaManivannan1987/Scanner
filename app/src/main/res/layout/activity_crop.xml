<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.scanner.scanner.activity.CropActivity">

    <com.example.scanner.scanner.view.CropImageView
        android:id="@+id/cropActivityCropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:guideColor="@color/colorPrimary"
        custom:handleSize="400dp"
        custom:highlightColor="#00FFFFFF"
        custom:showCircle="true"
        custom:touchPadding="8dp" />

    <ImageView
        android:id="@+id/cropActivityCropSubmitImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:src="@drawable/ok_enhance" />

